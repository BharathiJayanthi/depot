
<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>
<h1>Products</h1>
<table>
  <tfoot>
    <tr>
      <td colspan="3"><%= link_to 'New Product', new_product_path %></td>
    </tr>
  </tfoot> 
  <tbody>
    <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="image">
        <p><%= image_tag("http://www.placehold.it/200x200") %></p>
      </td>
      <td class="description">
        <h3><%= product.title %></h3>
        <p><%= truncate(strip_tags(product.description), length: 80) %></h3>
      </td>
      <td class="actions">
        <ul>
          <li><%= link_to 'Show', product %></li>
          <li><%= link_to 'Edit', edit_product_path(product) %></li>
          <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you Sure?' } %></li>
        </ul>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>